ifeq "$(OS)" "Windows_NT"
	EXE := .exe
	devnull := nul
	nop := echo > $(devnull)
	DLL := .dll
	MKDIR := busybox mkdir
	PIC :=
	PREDLL =
	FIND = busybox find
else
	EXE := .out
	devnull := /dev/null
	nop := echo > $(devnull)
	ifeq "$(OS)" "Darwin"
		DLL := .dylib
	else
		DLL := .so
	endif
	MKDIR := mkdir
	PIC := -fPIC
	PREDLL = lib
	FIND = find
endif

OBJ := .o
ARCH := .a
CAR := -Os -pedantic -pipe -fomit-frame-pointer -isystemlibyaml/include $(PIC) -Winline
# Don't define YAML_DECLARE_STATIC here to cause linker errors from compilation units not using one (presumably not #defined in the header)
CХХAR := $(CAR) -std=c++14 -Wall -Wextra
CCAR := $(CAR) -std=c11 -DYAML_DECLARE_STATIC -DYAML_VERSION_STRING=\"0.1.6\" -DYAML_VERSION_MAJOR=0 -DYAML_VERSION_MINOR=1 -DYAML_VERSION_PATCH=6
STRIP := strip
STRIPAR := --strip-all --remove-section=.comment --remove-section=.note

OUTDIR := out/
OBJDIR := $(OUTDIR)obj/
SRCDIR := src/
TSTDIR := test/
